<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.SettingsActivity">

    <Button
        android:id="@+id/btnResetSettings"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Reset Settings"
        app:layout_constraintEnd_toStartOf="@+id/btnResetMap"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelMoney" />

    <Button
        android:id="@+id/btnResetMap"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:text="Reset Map"
        app:layout_constraintBottom_toBottomOf="@+id/btnResetSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnResetSettings"
        app:layout_constraintTop_toTopOf="@+id/btnResetSettings" />

    <EditText
        android:id="@+id/txtEditWidth"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="32dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/txtLabelWidth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtLabelWidth"
        app:layout_constraintTop_toTopOf="@+id/txtLabelWidth"
        app:layout_constraintVertical_bias="0.75" />

    <EditText
        android:id="@+id/txtEditMoney"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/txtLabelMoney"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtLabelMoney"
        app:layout_constraintTop_toTopOf="@+id/txtLabelMoney"
        app:layout_constraintVertical_bias="0.75" />

    <EditText
        android:id="@+id/txtEditHeight"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="32dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/txtLabelHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtLabelHeight"
        app:layout_constraintTop_toTopOf="@+id/txtLabelHeight"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/txtLabelMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Starting Funds:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txtLabelHeight"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelHeight" />

    <TextView
        android:id="@+id/txtLabelHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Map Height:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txtLabelWidth"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelWidth" />

    <TextView
        android:id="@+id/txtLabelWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="64dp"
        android:text="Map Width:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>